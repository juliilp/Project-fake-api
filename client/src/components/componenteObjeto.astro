---
const { request, response, titulo, descripcion } = Astro.props;
const parsedResponse = JSON.parse(response);
const formattedResponse = JSON.stringify(parsedResponse, null, 2);
---

<section class="flex flex-col gap-4 ">
    <h2 class="text-[#A3CBD3]" >{titulo}</h2>
    <p class="text-[#A3CBD3]" >{descripcion}</p>
    <article class="flex flex-col ">
        <span class="bg-[#55457a] text-white p-2 rounded-tr-lg rounded-tl-lg w-full sm:max-w-[500px] md:w-auto md:max-w-[500px] lg:w-auto lg:max-w-[500px] xl:w-auto xl:max-w-[500px]">{request}</span>
        <pre class="bg-[#0D1016] text-white p-6 w-full rounded-br-lg rounded-bl-lg rounded-tr-lg overflow-x-auto whitespace-pre-wrap word-wrap-break-word max-w-[700px]">{formattedResponse}</pre>
    </article>
</section>
